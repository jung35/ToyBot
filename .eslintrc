{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "process": true,
    "console": true,
    "require": true,
    "module": true,
    "setInterval": true,
    "Promise": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-console": "off",
    "space-before-blocks": "error",
    "keyword-spacing": "error",
    "eol-last": "error",
    "no-trailing-spaces": "error",
    "newline-before-return": "error",
    "curly": "error",
    "comma-spacing": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "key-spacing": "error",
    "arrow-parens": "error",
    "arrow-spacing": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-warning-comments": "warn"
  }
}
